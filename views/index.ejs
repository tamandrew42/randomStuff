<!DOCTYPE html>
<html>
<head>
  <title>Genealogy Records</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    .record { border: 1px solid #ddd; padding: 15px; margin-bottom: 10px; }
    .form { background: #f5f5f5; padding: 20px; margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Family Genealogy Records</h1>
  
  <div class="records">
    <h2>Existing Records</h2>
    <% if(people.length === 0) { %>
      <p>No records found.</p>
    <% } else { %>
      <% people.forEach(person => { %>
        <div class="record">
          <h3><%= person.name %></h3>
          <p><strong>Birth Date:</strong> <%= person.birthDate %></p>
          <p><strong>Birth Place:</strong> <%= person.birthPlace %></p>
        </div>
      <% }); %>
    <% } %>
  </div>
  
  <div class="form">
    <h2>Add New Person</h2>
    <form action="/person" method="POST">
      <div>
        <label>Name:</label>
        <input type="text" name="name" required>
      </div>
      <div>
        <label>Birth Date:</label>
        <input type="date" name="birthDate">
      </div>
      <div>
        <label>Birth Place:</label>
        <input type="text" name="birthPlace">
      </div>
      <button type="submit">Save Record</button>
    </form>
  </div>
</body>
</html>
